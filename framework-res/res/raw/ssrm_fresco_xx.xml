<LevelsModel>

    <steps>
        <step id="0" temp="400"/>
        <step id="1" temp="420"/>
        <step id="2" temp="450"/>
        <step id="3" temp="480"/>
        <step id="4" temp="500"/>
        <step id="5" temp="520"/>
    </steps>

    <writers>
        <writer name="SIOPLevel"/>
        <writer name="CPUFreqMax"/>
        <writer name="CPUCoreMax"/>
        <writer name="GPUFreqMax"/>
        <writer name="Flash"/>
        <writer name="Recording"/>
        <writer name="LCDBrightness"/>
        <writer name="Charging"/>
        <writer name="ACL"/>
        <writer name="PowerStretch"/>
        <writer name="HotControl"/>
    </writers>

    <conditions>
        <condition name="CameraRecording"/>
        <condition name="PowerStretchMode"/>
        <condition name="HotGameMode"/>
        <condition name="ScreenOff"/>
        <condition name="ScreenOffInCall"/>
        <condition name="ScreenOnAppStarted"/>
        <condition name="AppStart"/>
    </conditions>

    <levels>
        <!-- The default layer is always at the bottom of the stack. -->
        <!-- 'condition' tag must not be used. -->
        <level default="true">
            <battery>
                <state step="0">
                    <settings>
                        <setting writer="SIOPLevel"    value="0"/>
                        <setting writer="CPUFreqMax"    value="-1"/>
                        <setting writer="CPUCoreMax"    value="-1"/>
                        <setting writer="GPUFreqMax"    value="-1"/>
                        <setting writer="LCDBrightness" value="-1"/>
                        <setting writer="Charging"      value="70"/>
                        <setting writer="Flash"         value="1"/>
                        <setting writer="Recording"     value="1"/>
                        <setting writer="ACL"           value="0"/>
                        <setting writer="PowerStretch"       value="0"/>
                        <setting writer="HotControl"    value="0"/>
                    </settings>
                </state>
                <state step="1">
                    <settings>
                        <setting writer="SIOPLevel"    value="1"/>
                        <setting writer="CPUFreqMax"    value="-1"/>
                        <setting writer="CPUCoreMax"    value="-1"/>
                        <setting writer="GPUFreqMax"    value="-1"/>
                        <setting writer="LCDBrightness" value="-1"/>
                        <setting writer="Charging"      value="70"/>
                        <setting writer="Flash"         value="1"/>
                        <setting writer="Recording"     value="1"/>
                        <setting writer="ACL"           value="0"/>
                        <setting writer="PowerStretch"       value="0"/>
                        <setting writer="HotControl"    value="0"/>
                    </settings>
                </state>
                <state step="2">
                    <settings>
                        <setting writer="SIOPLevel"    value="2"/>
                        <setting writer="CPUFreqMax"    value="1500000"/>
                        <setting writer="CPUCoreMax"    value="-1"/>
                        <setting writer="GPUFreqMax"    value="450"/>
                        <setting writer="LCDBrightness" value="-1"/>
                        <setting writer="Charging"      value="70"/>
                        <setting writer="Flash"         value="1"/>
                        <setting writer="Recording"     value="1"/>
                        <setting writer="ACL"           value="0"/>
                        <setting writer="PowerStretch"       value="0"/>
                        <setting writer="HotControl"    value="0"/>
                    </settings>
                </state>
                <state step="3">
                    <settings>
                        <setting writer="SIOPLevel"    value="3"/>
                        <setting writer="CPUFreqMax"    value="1200000"/>
                        <setting writer="CPUCoreMax"    value="-1"/>
                        <setting writer="GPUFreqMax"    value="450"/>
                        <setting writer="LCDBrightness" value="248"/>
                        <setting writer="Charging"      value="50"/>
                        <setting writer="Flash"         value="1"/>
                        <setting writer="Recording"     value="1"/>
                        <setting writer="ACL"           value="0"/>
                        <setting writer="PowerStretch"       value="0"/>
                        <setting writer="HotControl"    value="0"/>
                    </settings>
                </state>
                <state step="4">
                    <settings>
                        <setting writer="SIOPLevel"    value="4"/>
                        <setting writer="CPUFreqMax"    value="1000000"/>
                        <setting writer="CPUCoreMax"    value="-1"/>
                        <setting writer="GPUFreqMax"    value="350"/>
                        <setting writer="LCDBrightness" value="248"/>
                        <setting writer="Charging"      value="30"/>
                        <setting writer="Flash"         value="1"/>
                        <setting writer="Recording"     value="1"/>
                        <setting writer="ACL"           value="0"/>
                        <setting writer="PowerStretch"       value="0"/>
                        <setting writer="HotControl"    value="0"/>
                    </settings>
                </state>
                <state step="5">
                    <settings>
                        <setting writer="SIOPLevel"    value="5"/>
                        <setting writer="CPUFreqMax"    value="800000"/>
                        <setting writer="CPUCoreMax"    value="-1"/>
                        <setting writer="GPUFreqMax"    value="266"/>
                        <setting writer="LCDBrightness" value="248"/>
                        <setting writer="Charging"      value="30"/>
                        <setting writer="Flash"         value="0"/>
                        <setting writer="Recording"     value="1"/>
                        <setting writer="ACL"           value="0"/>
                        <setting writer="PowerStretch"       value="0"/>
                        <setting writer="HotControl"    value="0"/>
                    </settings>
                </state>
            </battery>
        </level>

        <level>
            <condition name="CameraRecording"/>
            <battery>
                <state step="0">
                    <settings>
                        <setting writer="LCDBrightness" value="-1"/>
                    </settings>
                </state>
                <state step="1">
                    <settings>
                        <setting writer="LCDBrightness" value="241"/>
                    </settings>
                </state>
                <state step="2">
                    <settings>
                        <setting writer="LCDBrightness" value="200"/>
                    </settings>
                </state>
                <state step="4">
                    <settings>
                        <setting writer="LCDBrightness" value="150"/>
                    </settings>
                </state>
            </battery>
        </level>

        <level>
            <condition name="PowerStretchMode"/>
            <battery>
                <state step="0">
                    <settings>
                        <setting writer="PowerStretch"    value="0"/>
                    </settings>
                </state>
                <state step="1">
                    <settings>
                        <setting writer="PowerStretch"    value="1"/>
                    </settings>
                </state>
            </battery>
        </level>

        <level>
            <condition name="HotGameMode"/>
            <battery>
                <state step="0">
                    <settings>
                        <setting writer="HotControl"    value="0"/>
                    </settings>
                </state>
                <state step="1">
                    <settings>
                        <setting writer="CPUFreqMax"    value="-1"    option="nothing"/>
                        <setting writer="GPUFreqMax"    value="-1"    option="nothing"/>
                        <setting writer="HotControl"    value="1"/>
                    </settings>
                </state>
                <state step="5">
                    <settings>
                    </settings>
                </state>
            </battery>
        </level>

        <level>
            <condition name="ScreenOff"/>
            <battery>
                <state step="0">
                    <settings>
                        <setting writer="Charging" value="100" option="forced"/>
                    </settings>
                </state>
            </battery>
        </level>

        <level>
            <condition name="ScreenOffInCall"/>
            <battery>
                <state step="0">
                    <settings>
                        <setting writer="Charging" value="70" option="forced"/>
                    </settings>
                </state>
            </battery>
        </level>

        <level>
            <condition name="ScreenOnAppStarted"/>
            <battery>
                <state step="0">
                    <settings>
                        <setting writer="Charging" value="30"/>
                    </settings>
                </state>
            </battery>
        </level>

        <level>
            <condition name="AppStart"/>
            <battery>
                <state step="0">
                    <settings>
                        <setting writer="CPUFreqMax"    value="-1"/>
                        <setting writer="GPUFreqMax"    value="-1"/>
                    </settings>
                </state>
            </battery>
        </level>

    </levels>

</LevelsModel>
